{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "types": ["node"]
  },
  "ts-node": {
    "moduleTypes": {
      "**/*.ts": "module"
    },
    "transpileOnly": true,
    "esm": true
  },
  "compileOnSave": true,
  "include": ["src"]
}