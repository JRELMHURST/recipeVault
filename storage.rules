rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User-specific uploads (e.g. temp images, vault images)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public/shared images (if any)
    match /shared_recipes/{allPaths=**} {
      allow read: if true;  // Allow viewing by anyone
      allow write: if request.auth != null && request.auth.token.admin == true;  // Optional: admin only
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}