rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User-specific uploads (e.g. vault images, temp images)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public/shared images (shared recipe cards)
    match /shared_recipes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // üåç Public/global recipe images
    match /global_recipes/{allPaths=**} {
      allow read: if true; // fully public
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}