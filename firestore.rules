rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Per-user documents
    match /users/{userId} {
      allow read, list, create, delete: if request.auth != null && request.auth.uid == userId;

      allow update: if request.auth != null && request.auth.uid == userId && (
        // âœ… Safe updates (user can update these fields themselves)
        (
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['tier']) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'productId',
            'superUser',
            'lastLogin',
            'email',
            'createdAt',
            'platform',
            'usage'
          ])
        )
        ||
        // ğŸ‘‘ Admin override: full updates allowed
        request.auth.token.admin == true
      );

      // ğŸ“¦ Recipes stored in user's vault
      match /recipes/{recipeId} {
        allow read, list, write: if request.auth != null && request.auth.uid == userId;
      }

      // ğŸ·ï¸ Custom categories for filtering recipes
      match /categories/{categoryId} {
        allow read, list, write: if request.auth != null && request.auth.uid == userId;
      }

      // ğŸ“ˆ AI usage quota (read-only from app)
      match /aiUsage/{docId} {
        allow read, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // ğŸŒ Translation usage quota (read-only from app)
      match /translationUsage/{docId} {
        allow read, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
    }

    // ğŸ“Š Event analytics (write-only logging)
    match /analytics/{docId} {
      allow create: if request.auth != null && request.auth.uid != null;
      allow read, update, delete: if false;
    }
  }
}